                {% else %}
                    <h4>Seznam turnajů</h4>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                {{ include('turnaj/_turnaje.html.twig') }}
            {% endif %}
            </div>
        </div>
        <div class="row ">
            <div class="col">
